<div class="jumbotron ">
  <% @posts.each do | post | %>
    <% if user_signed_in?%>
      <div class="card ">
        <div class="card-header">
          <h3 class="title"><%= post.title %></h3>
        </div>
        <div class="card-body">
          <p class="card-text"><%= post.content%></p>
        </div>
        <div class="card-footer">
          <p>Created by: <strong><%= post.user.name%></strong></p>
          <small class="username"><%= post.user.email %></small>
        </div>
      </div>
    <% else %>
    <div class="card">
        <div class="card-header">
          <h3 class="title"><%= post.title %></h3>
        </div>
        <div class="card-body">
          <p class="card-text"><%= post.content%></p>
        </div>
    </div>
    <% end %>
    <% end %>
</div>